{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "charset": "utf8",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "dist/ts",
    "paths": {
      "lib/*": [
        "src/lib/*"
      ],
      "src/*": [
        "src/*"
      ],
      "root/*": [
        "./*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "dist",
  ],
}